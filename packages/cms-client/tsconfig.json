{
    "extends": "@juliosampaio/ts-config/bundler/node",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "rootDir": "./src",
        "noEmit": false,
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}