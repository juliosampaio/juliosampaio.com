{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "format": {},
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@juliosampaio/tailwind-config#build"]
    }
  }
}
